<div class="image-show">

  <% if current_user && image.user_id == current_user.id %>
    <%= button_to "Delete", image_url(image), method: :delete, class: "user-image-buttons" %>
    <%= link_to "Edit", edit_image_url(image), class: "user-image-buttons" %>
  <% end %>

  <h2><%= image.title %></h2>

  <%= link_to image_tag(image.image.url(:large)), image.image.url %><br>
  <p><%= image.description %></p>

</div>