<h1>Reset Password for <%= @user.email %></h1>

<%= form_for @user do |f| %>
	<%= label_tag(:password, "Password:") %>
	<%= f.password_field(:password) %>
	<%= label_tag(:password_confirmation, "Confirm Password:") %>
	<%= f.password_field(:password_confirmation) %><br>
	<%= f.submit "Save" %>
<% end %>