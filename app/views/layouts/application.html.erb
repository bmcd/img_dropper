<!DOCTYPE html>
<html>
<head>
  <title>ImgurClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="flash-notice"><%= flash.notice %></div>

  <%= link_to "Upload an Image", new_image_url %>
  <%= link_to "Log In", new_session_url unless current_user %>
  <%= link_to "Sign Up", new_user_url unless current_user %>
  <%= button_to "Log out", session_url, method: :delete if current_user %>
  <%= link_to current_user.email, user_url(current_user) if current_user %>

<%= yield %>

</body>
</html>
