<%= @user.errors.full_messages.to_sentence if @user %>

<%= form_tag("/session", method: 'post', remote: true, class: "login-form") do %>
  <% email = (@user.email if @user) || "" %>
  <% password = (@user.password if @user) || "" %>
  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email, email) %>
  <%= label_tag(:password, "Password:") %>
  <%= password_field_tag(:password, password) %><br>
	<label class="remember-me">
		<input type="checkbox" name="remember_me">Remember Me</label>

  <%= submit_tag("Log In") %>
<% end %>

Not a user? <%= link_to "Sign Up", new_user_url, class: "signup-link" %><br>
Forgot password? <%= link_to "Click Here", new_password_reset_url, class: "forgot-password" %>